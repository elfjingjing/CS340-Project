        <div id="content">
        <h2>Items</h2>
        <form id="itemsForm">
        <fieldset>
            <legend>Create New Item</legend>
            <label for="name">Item Name:</label>
            <input type="text" name="name" id="name" placeholder="Name" size="30"><br><br>
            <label for="price">Price of the item:</label>
            $ <input type="text" name="price" id="price" placeholder="Price" size="20"><br><br>
        
            <label for="categoryId">Category of the item:</label>
            <select name="categoryId" id="categoryId">
                <option value="1">Milk Tea</option>
                <option value="2">Fruit Tea</option>
                <option value="3">Coffee</option>
            </select><br><br>
            <input type="submit" id="createButton" value="Add Item">
        </fieldset>
        </form><br>
        
        <form id="filterItem" action="" method="">
        <h2><label>Filter by Categories</label></h2>
          <select name="categories" id="categoryFilter">
              {{#each categories}}
            <option value="{{categoryID}}">{{categoryName}}</option>
             {{/each}}
          </select><br>
        <input type="button" value="Filter" onclick="filterItemByCategory()">
        </form>

        <h2>Current Items</h2>
            <table>
                <tr>
                <th>Name</th>
                <th>Price</th> 
                <th>Category</th>
                <th>Action</th>
                </tr>

                {{#each records}}
                <tr> 
                    <td><input type="text" name="item{{this.itemID}}" value="{{this.itemName}}"></td>
                    <td><input type="text" name="price{{this.itemID}}" value="${{this.price}}" size = 5></td> 
                    <td>
                        <select name="categoryOptions" id="categoryOptions">
                            {{#each categories}}
                            <option value="{{this.categoryID}}">{{this.categoryName}}</option>
                            {{/each}}
                        </select>
                    </td>
                    <td>
                    <input type="button" id="update_{{this.itemID}}" value="Update">
                    <input type="button" id="delete_{{this.itemID}}" value="Delete">
                    </td>
                </tr>
                {{/each}}
            </table>
            
