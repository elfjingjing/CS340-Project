          <br>
          <br>
          <h2>Current Categories</h2>
          <table>
            <tr>
            <th>Name</th>
            <th>Action</th>
            </tr>
            {{#each records}}
            <tr>
            <td>
              <input type="text" id="category{{this.categoryID}}" value="{{this.categoryName}}">
            </td>
            <td>
              <input type="button" id="update_{{this.categoryID}}" onclick="updateCategory({{this.categoryID}})" value="Update">
              <input type="button" id="delete_{{this.categoryID}}" onclick="deleteCategory({{this.categoryID}})" value="Delete">
            </td>
            </tr>
            {{/each}}
          </table>
