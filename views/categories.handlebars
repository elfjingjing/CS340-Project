      <div id="content">
          <h2>Categories</h2>
          <form id="addCategory" action="/categories" method="post">
          <fieldset>
            <legend>Create New Category</legend>
            <label for="name">Category Name:</label>
            <input type="text" name="name" id="name" placeholder="Name" size="30">
            <br><br>
            <input type="submit" id="createButton" value="Add Category">
          </fieldset>
          </form>
