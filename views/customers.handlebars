        <div id="content">
            <h2>Customers</h2>
            <form id="customerForm">
            <fieldset>
                <legend>Add a New Customer</legend>
                <input type="text" name ="firstName" id="firstName" placeholder="First Name" size="20" required>
                <input type="text" name ="middleName" id="middleName" placeholder="Middle Name" size="20">
                <input type="text" name ="lastName" id="lastName" placeholder="Last Name" size="20" required><br><br>
                <input type="email" name ="email" id="email" placeholder="Email" size="30" required>
                <input type="submit" id="postSubmit" value="Add">
            </fieldset>
            </form>

            <br>
            <h2>Current Customers</h2>
            <table>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                </tr>
                {{#each records}}
                <tr> 
                    <td>{{this.customerID}}</td>
                    <td><input type="text" name="customerf{{this.customerID}}" value="{{this.firstName}}" size = 8></td>
                    <td><input type="text" name="customerl{{this.customerID}}" value="{{this.lastName}}" size = 8></td> 
                    <td><input type="text" name="customerEmail{{this.customerID}}" value="{{this.email}}"></td> 
                    <td>
                    <input type="button" id="update_{{this.customerID}}" value="Update">
                    <input type="button" id="delete_{{this.customerID}}" value="Delete">
                    </td>
                </tr>
                {{/each}}
                
            </table>
        </div><!-- #content -->


